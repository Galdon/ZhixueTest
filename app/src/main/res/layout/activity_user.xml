<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/activity_user_head"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/user_bg">

        <LinearLayout
            android:id="@+id/activity_user_head_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/btn_back2"
                android:id="@+id/activity_user_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/activity_user_img_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                android:paddingTop="10dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:src="@drawable/user_img"
                    android:id="@+id/activity_user_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/activity_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="测试用户"/>

            </LinearLayout>

            <ImageView
                android:src="@drawable/btn_edit"
                android:id="@+id/activity_user_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_user_head_down"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_user_head_down_item1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="常识120"/>

            <TextView
                android:id="@+id/activity_user_head_down_item2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="案例120"/>

            <TextView
                android:id="@+id/activity_user_head_down_item3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="订阅130"/>

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/activity_user_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
